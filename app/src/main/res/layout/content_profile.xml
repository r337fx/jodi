<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="makasa.dapurkonten.jodohideal.Profile"
    tools:showIn="@layout/app_bar_profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/thumbnailFoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/viewProfileNama"
            android:layout_toRightOf="@+id/thumbnailFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codelicius"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/viewProfileUmur"
            android:layout_below="@+id/viewProfileNama"
            android:layout_toRightOf="@+id/thumbnailFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31 Thun" />

        <TextView
            android:id="@+id/viewProfileGender"
            android:layout_below="@+id/viewProfileUmur"
            android:layout_toRightOf="@+id/thumbnailFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cewek" />

        <TextView
            android:id="@+id/viewProfileSuku"
            android:layout_below="@+id/viewProfileGender"
            android:layout_toRightOf="@+id/thumbnailFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Madura / Islam" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_person_dk"
        android:text="Tentang Kamu"
        android:gravity="left|center"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Tinggi Badan"/>
        <TextView
            android:id="@+id/viewProfileTinggi"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text=": 175 cm"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Lokasi"/>
        <TextView
            android:id="@+id/viewProfileLokasi"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text=": Jakarta"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Horoskop"/>
        <TextView
            android:id="@+id/viewProfileHoroskop"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text=": Taurus"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Pekerjaan"/>
        <TextView
            android:id="@+id/viewProfilePekerjaan"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text=": Artis"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Agama"/>
        <TextView
            android:id="@+id/viewProfileAgama"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text=": Islam"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Merokok"/>
        <TextView
            android:id="@+id/viewProfileMerokok"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text=": Ya"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Minum Alkohol"/>
        <TextView
            android:id="@+id/viewProfileAlkohol"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text=": Tidak"/>
    </LinearLayout>
</LinearLayout>
